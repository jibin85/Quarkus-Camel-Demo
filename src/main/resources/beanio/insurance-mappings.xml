<beanio xmlns="http://www.beanio.org/2012/03">
    <stream name="insuranceRequestStream" format="xml">
        <record name="insurance" class="org.transformation.model.request.Insurance">
            <segment name="customerDetails" class="org.transformation.model.request.CustomerDetails">
                <segment name="customer" class="org.transformation.model.request.Customer">
                    <field name="customerName" />
                    <field name="customerId" />
                    <field name="customerDOB" />
                </segment>
                <segment name="premium" class="org.transformation.model.request.Premium">
                    <field name="policyNumber" />
                    <field name="premiumAmount" />
                    <field name="premiumScheme" />
                    <field name="validPeriod" />
                    <field name="validDate" />
                </segment>
                <segment name="claim" class="org.transformation.model.request.Claim">
                    <field name="maxClaimAmt" />
                </segment>
            </segment>
        </record>
    </stream>
    <stream name="insuranceResponseStream" format="fixedlength">
        <record name="customerDetails" class="org.transformation.model.response.CustomerDetailsResponse">
            <field name="validClaim" length="5" />
            <segment name="customer" class="org.transformation.model.response.CustomerResponse">
                <field name="customerName" length="50" />
                <field name="customerId" length="10" />
                <field name="customerAge" length="3" default="0" justify="right" padding="0"  />
            </segment>
            <segment name="claim" class="org.transformation.model.response.ClaimResponse">
                <field name="claimAmt" length="20" default="0" justify="right" padding="0" />
            </segment>
        </record>
    </stream>
</beanio>